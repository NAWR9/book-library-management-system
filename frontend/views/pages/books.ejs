<%- contentFor('body') %>

<div class="container py-5">
    <h1 class="text-center mb-4"><%= t('books.bookLibrary') %></h1>
    <% if (locals.user && (locals.user.role === "admin" || locals.user.isAdmin)) { %>
    <div class="text-end mb-3">
      <a href="/books/new" class="btn btn-primary">+ <%= t('books.addBook') %></a>
    </div>
    <% } %>
    <div class="row row-cols-1 row-cols-md-3 g-4">
      <% books.forEach(book => { %>
        <div class="col">
          <div class="card book-card h-100 shadow-sm" data-book-title="<%= book.title %>" data-book-author="<%= book.author %>">
            <img src="<%= book.cover %>" class="card-img-top" alt="Book Cover" onerror="this.src='/img/book-cover-placeholder.svg'">
            <div class="card-body">
              <h5 class="card-title"><%= book.title %></h5>
              <p class="card-text text-muted"><%= t('books.by') %> <%= book.author %></p>
              <% if (book.categories && book.categories.length) { %>
                <div class="mb-2">
                  <% book.categories.forEach(categoryKey => { %>
                    <span class="badge bg-secondary"><%= t('bookCategories.' + categoryKey) %></span>
                  <% }) %>
                </div>
              <% } %>
              <div class="d-flex justify-content-between">
                <button class="btn btn-sm btn-outline-primary mt-2 view-details-btn"><%= t('books.viewDetails') %></button>
              <% if (locals.user && (locals.user.role === 'admin' || locals.user.isAdmin)) { %>
                <span class="btn-group mt-2 ms-1">
                  <a href="/books/<%= book.id %>/edit?lang=<%= locals.htmlLang %>" class="btn btn-sm btn-outline-secondary edit-book-card-btn" aria-label="<%= t('common.edit') %>">
                    <i class="fas fa-edit"></i>
                  </a>
                  <button class="btn btn-sm btn-outline-danger delete-book-card-btn" data-id="<%= book.id %>" data-bs-toggle="modal" data-bs-target="#deleteConfirmModal" aria-label="<%= t('common.delete') %>">
                    <i class="fas fa-trash-alt"></i>
                  </button>
                </span>
              <% } %>
                <a href="/books/<%= book.id %>" class="btn btn-sm btn-primary mt-2 full-details-link" onclick="event.stopPropagation();"><%= t('books.fullDetails') %></a>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
</div>

<!-- Book Details Modal -->
<div class="modal fade" id="bookDetailsModal" tabindex="-1" aria-labelledby="bookDetailsModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="bookDetailsModalLabel"><%= t('books.bookDetails') %></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="<%= t('books.close') %>"></button>
      </div>
      <div class="modal-body">
        <div id="bookDetailsLoading" class="text-center py-5">
          <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden"><%= t('books.loadingDetails') %></span>
          </div>
          <p class="mt-2"><%= t('books.loadingDetails') %></p>
        </div>
        <div id="bookDetailsContent" class="d-none">
          <div class="row">
            <div class="col-md-4">
              <img id="bookCover" src="" class="img-fluid rounded" alt="Book Cover" onerror="this.src='/img/book-cover-placeholder.svg'">
            </div>
            <div class="col-md-8">
              <h4 id="bookTitle"></h4>
              <p class="text-muted mb-3">
                <span id="bookAuthors"></span>
                <small id="bookPublisher" class="d-block"></small>
              </p>
              
              <div class="mb-3">
                <h5><%= t('books.description') %></h5>
                <div id="bookDescription" class="description-text"></div>
              </div>
              
              <div class="row mb-3">
                <div class="col-sm-6">
                  <p><strong><%= t('books.publicationDate') %>:</strong> <span id="bookPublishedDate"></span></p>
                </div>
                <div class="col-sm-6">
                  <p><strong><%= t('books.pageCount') %>:</strong> <span id="bookPageCount"></span></p>
                </div>
              </div>
              
              <div class="mb-3">
                <p><strong><%= t('books.category') %>:</strong> <span id="bookCategories"></span></p>
                <p><strong><%= t('books.isbn') %>:</strong> <span id="bookIsbn"></span></p>
                <!-- Hidden translation labels for JS -->
                <span class="d-none">
                  <strong data-i18n="books.publisher"><%= t('books.publisher') %></strong>
                </span>
              </div>
            </div>
          </div>
        </div>
        <div id="bookDetailsError" class="alert alert-danger d-none" role="alert"></div>
      </div>
      <div class="modal-footer justify-content-between">
        <div>
          <% if (locals.user && (locals.user.role === 'admin' || locals.user.isAdmin)) { %>
            <button type="button" id="editBookBtn" class="btn btn-outline-secondary me-2" aria-label="<%= t('common.edit') %>">
              <i class="fas fa-edit"></i>
            </button>
            <button type="button" id="deleteBookBtn" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteConfirmModal" aria-label="<%= t('common.delete') %>">
              <i class="fas fa-trash-alt"></i>
            </button>
          <% } %>
        </div>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><%= t('books.close') %></button>
      </div>
    </div>
  </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-labelledby="deleteConfirmModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteConfirmModalLabel"><%= t('common.confirmDelete') %></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= t('books.deleteConfirmMessage') %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><%= t('common.cancel') %></button>
        <button type="button" class="btn btn-danger" id="confirmDeleteBtn"><%= t('common.delete') %></button>
      </div>
    </div>
  </div>
</div>

