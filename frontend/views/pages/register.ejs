<%- contentFor('body') %>

<!-- Hero Section -->
<header class="auth-hero text-center">
  <div class="container">
    <h1><%= t('register.joinLibrary') %></h1>
    <p class="lead"><%= t('register.createAccountDesc') %></p>
  </div>
</header>

<!-- Registration Form -->
<main class="container py-4">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <!-- API Status -->
      <div class="text-center mb-3">
        <small id="api-status" class="text-muted"><%= t('api.apiStatus') %></small>
      </div>

      <div class="card auth-card">
        <div class="card-header text-center">
          <h2 class="mb-0">
            <i class="fas fa-user-plus me-2"></i>
            <span><%= t('register.registerTitle') %></span>
          </h2>
        </div>
        <div class="card-body p-4">
          <!-- Alert Message -->
          <div
            class="alert alert-danger alert-message mb-3"
            id="errorMessage"
            role="alert"
          ></div>
          <div
            class="alert alert-success alert-message mb-3"
            id="successMessage"
            role="alert"
          ></div>

          <!-- Registration Form -->
          <form id="registerForm">
            <div class="mb-3">
              <label for="name" class="form-label"><%= t('register.fullNameLabel') %></label>
              <input
                type="text"
                class="form-control"
                id="name"
                name="name"
                required
              />
              <div class="error-feedback"><%= t('register.fullNameError') %></div>
            </div>
            <div class="mb-3">
              <label for="email" class="form-label"><%= t('login.emailLabel') %></label>
              <input
                type="email"
                class="form-control"
                id="email"
                name="email"
                required
              />
              <div class="error-feedback"><%= t('login.emailError') %></div>
            </div>
            <div class="mb-3">
              <label for="password" class="form-label"><%= t('login.passwordLabel') %></label>
              <input
                type="password"
                class="form-control"
                id="password"
                name="password"
                required
              />
              <div class="error-feedback"><%= t('register.passwordMinLength') %></div>
            </div>
            <div class="row">
              <div class="col-md-6 mb-3">
                <label
                  for="phoneNumber"
                  class="form-label"
                  ><%= t('register.phoneNumberLabel') %></label
                >
                <input
                  type="tel"
                  class="form-control"
                  id="phoneNumber"
                  name="phoneNumber"
                />
              </div>
              <div class="col-md-6 mb-3">
                <label
                  for="department"
                  class="form-label"
                  ><%= t('register.departmentLabel') %></label
                >
                <select class="form-select" id="department" name="department">
                  <option value=""><%= t('register.selectDepartment') %></option>
                  <option value="engineering"><%= t('register.departments.engineering') %></option>
                  <option value="computerScience"><%= t('register.departments.computerScience') %></option>
                  <option value="business"><%= t('register.departments.business') %></option>
                  <option value="arts"><%= t('register.departments.arts') %></option>
                  <option value="medicine"><%= t('register.departments.medicine') %></option>
                  <option value="law"><%= t('register.departments.law') %></option>
                </select>
              </div>
            </div>
            <div class="d-grid">
              <button
                type="submit"
                class="btn btn-primary btn-lg"
              >
                <%= t('register.createAccount') %>
              </button>
            </div>
          </form>

          <div class="text-center mt-3">
            <p>
              <span><%= t('register.haveAccount') %></span>
              <a href="./login" class="auth-link"><%= t('register.loginHere') %></a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
