<%- contentFor('body') %>

<!-- Hero Section -->
<header class="auth-hero text-center">
  <div class="container">
    <h1><%= t('login.welcomeToLibrary') %></h1>
    <p class="lead"><%= t('login.accessResources') %></p>
  </div>
</header>

<!-- Login Form -->
<main class="container py-4">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <!-- API Status Indicator -->
      <div class="text-center mb-3">
        <small id="api-status" class="text-muted"><%= t('api.apiStatus') %></small>
      </div>

      <div class="card auth-card">
        <div class="card-header text-center">
          <h2 class="mb-0">
            <i class="fas fa-sign-in-alt me-2"></i
            ><span><%= t('login.loginTitle') %></span>
          </h2>
        </div>
        <div class="card-body p-4">
          <!-- Alert Message -->
          <div
            class="alert alert-danger alert-message mb-3"
            id="errorMessage"
            role="alert"
          ></div>
          <div
            class="alert alert-success alert-message mb-3"
            id="successMessage"
            role="alert"
          ></div>

          <!-- Login Form -->
          <form id="loginForm">
            <div class="mb-3">
              <label for="email" class="form-label"><%= t('login.emailLabel') %></label>
              <input
                type="email"
                class="form-control"
                id="email"
                name="email"
                required
              />
              <div class="error-feedback"><%= t('login.emailError') %></div>
            </div>
            <div class="mb-3">
              <label for="password" class="form-label"><%= t('login.passwordLabel') %></label>
              <input
                type="password"
                class="form-control"
                id="password"
                name="password"
                required
              />
              <div class="error-feedback"><%= t('login.passwordError') %></div>
            </div>
            <div class="d-grid">
              <button
                type="submit"
                class="btn btn-primary btn-lg"
              >
                <%= t('login.loginButton') %>
              </button>
            </div>
          </form>

          <div class="text-center mt-3">
            <p>
              <span><%= t('login.noAccount') %></span>
              <a href="./register" class="auth-link"><%= t('login.registerHere') %></a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
