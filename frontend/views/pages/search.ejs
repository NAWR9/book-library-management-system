<%- contentFor('body') %>

<div class="container py-5">
  <h1 class="text-center mb-4"><%= t('books.bookLibrary') %> - Search</h1>
  
  <!-- Search Form -->
  <form id="searchForm" class="mb-4">
    <% const categoriesList = t('bookCategories', { returnObjects: true }); %>
    <div class="row g-3">
      <div class="col-md-4">
        <input type="text" id="title" class="form-control" placeholder="<%= t('books.bookTitle') %>">
      </div>
      <div class="col-md-4">
        <input type="text" id="author" class="form-control" placeholder="<%= t('books.author') %>">
      </div>
      <div class="col-md-4">
        <select id="category" class="form-select">
          <option value=""><%= t('books.category') %></option>
          <% for (const key in categoriesList) { %>
            <option value="<%= key %>"><%= categoriesList[key] %></option>
          <% } %>
        </select>
      </div>
    </div>
    <div class="text-end mt-3">
      <button type="submit" class="btn btn-primary"><%= t('common.search') %></button>
    </div>
  </form>

  <!-- Search Results -->
  <div id="searchResults" class="row row-cols-1 row-cols-md-3 g-4">
<% if (typeof books !== "undefined" && books.length > 0) { %>
  <% books.forEach(function(book) { %>
    <%- include('../partials/book-card', { book: book }) %>
  <% }) %>
<% } else { %>
  <div class="col-12 text-center"><%= t('books.noBooksFound') %></div>
<% } %>
  </div>
</div>

<!-- Smart Search Box (initially hidden) -->
<div id="smartSearchBox" class="card shadow" style="display:none; position:fixed; bottom:110px; right:40px; width:320px; z-index:1060;">
  <div class="card-header py-2 px-3 d-flex justify-content-between align-items-center">
    <span><strong>Smart Search</strong></span>
    <button type="button" class="btn-close btn-sm" aria-label="Close" onclick="hideSmartSearchBox()"></button>
  </div>
  <div class="card-body py-2 px-3">
    <div id="smartSearchResponse" class="chat-response mb-3"></div>
    <div class="d-grid gap-2">
      <button class="btn btn-outline-primary btn-sm" onclick="askSmartQuestion('about')">
        What's this book about?
      </button>
      <button class="btn btn-outline-info btn-sm" onclick="askSmartQuestion('author')">
        Who's the author?
      </button>
      <button class="btn btn-outline-secondary btn-sm" onclick="askSmartQuestion('similar')">
        Similar books?
      </button>
    </div>
  </div>
</div>

