<%- contentFor('body') %>

<!-- Hero Section -->
<header class="auth-hero text-center">
  <div class="container">
    <h1><%= t('login.resetYourPassword') %></h1>
    <p class="lead">Enter your new password below</p>
  </div>
</header>

<!-- Reset Password Form -->
<main class="container py-4">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <!-- API Status Indicator -->
      <div class="text-center mb-3">
        <small id="api-status" class="text-muted"><%= t('api.apiStatus') %></small>
      </div>

      <div class="card auth-card">
        <div class="card-header text-center">
          <h2 class="mb-0">
            <i class="fas fa-lock me-2"></i>
            <span><%= t('login.resetPassword') %></span>
          </h2>
        </div>
        <div class="card-body p-4">
          <!-- Alert Messages -->
          <div
            class="alert alert-danger alert-message mb-3"
            id="errorMessage"
            role="alert"
            style="display: none;"
          ></div>
          <div
            class="alert alert-success alert-message mb-3"
            id="successMessage"
            role="alert"
            style="display: none;"
          ></div>

          <!-- Reset Password Form -->
          <form id="resetPasswordForm">
            <input type="hidden" id="resetToken" value="<%= token %>">
            <div class="mb-3">
              <label for="newPassword" class="form-label"><%= t('login.newPasswordLabel') %></label>
              <input
                type="password"
                class="form-control"
                id="newPassword"
                name="newPassword"
                required
                minlength="6"
              />
              <div class="error-feedback"><%= t('register.passwordMinLength') %></div>
            </div>
            <div class="mb-3">
              <label for="confirmPassword" class="form-label"><%= t('login.confirmPasswordLabel') %></label>
              <input
                type="password"
                class="form-control"
                id="confirmPassword"
                name="confirmPassword"
                required
              />
              <div class="error-feedback"><%= t('login.passwordsDoNotMatch') %></div>
            </div>
            <div class="d-grid">
              <button
                type="submit"
                class="btn btn-primary btn-lg"
              >
                <%= t('login.resetPassword') %>
              </button>
            </div>
          </form>

          <div class="text-center mt-3">
            <p>
              <a href="/login" class="auth-link"><%= t('login.backToLogin') %></a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</main> 