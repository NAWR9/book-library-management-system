<%- contentFor('body') %>

<!-- Profile Content -->
<main class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card">
        <div class="card-header text-center">
          <h2 class="mb-0">
            <i class="fas fa-user-circle me-2"></i
            ><span><%= t('profile.profileTitle') %></span>
          </h2>
        </div>
        <div class="card-body p-4">
          <!-- Alert Message -->
          <div
            class="alert alert-danger alert-message mb-3"
            id="errorMessage"
            role="alert"
          ></div>
          <div
            class="alert alert-success alert-message mb-3"
            id="successMessage"
            role="alert"
          ></div>

          <!-- Profile Form -->
          <form id="profileForm">
            <div class="mb-3">
              <label for="name" class="form-label"><%= t('register.fullNameLabel') %></label>
              <input
                type="text"
                class="form-control"
                id="name"
                name="name"
                required
              />
            </div>
            <div class="mb-3">
              <label for="email" class="form-label"><%= t('login.emailLabel') %></label>
              <input
                type="email"
                class="form-control"
                id="email"
                name="email"
                required
                readonly
              />
              <small class="text-muted"><%= t('profile.emailCannotChange') %></small>
            </div>
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="phoneNumber" class="form-label"><%= t('register.phoneNumberLabel') %></label>
                <input
                  type="tel"
                  class="form-control"
                  id="phoneNumber"
                  name="phoneNumber"
                />
              </div>
              <div class="col-md-6 mb-3">
                <label for="department" class="form-label"><%= t('register.departmentLabel') %></label>
                <select class="form-select" id="department" name="department">
                  <option value=""><%= t('register.selectDepartment') %></option>
                  <option value="engineering"><%= t('register.departments.engineering') %></option>
                  <option value="computerScience"><%= t('register.departments.computerScience') %></option>
                  <option value="business"><%= t('register.departments.business') %></option>
                  <option value="arts"><%= t('register.departments.arts') %></option>
                  <option value="medicine"><%= t('register.departments.medicine') %></option>
                  <option value="law"><%= t('register.departments.law') %></option>
                </select>
              </div>
            </div>
            <div class="d-grid">
              <button type="submit" class="btn btn-primary btn-lg">
                <%= t('profile.updateProfile') %>
              </button>
            </div>
          </form>

          <div class="mt-4 text-center">
            <a href="./dashboard" class="text-decoration-none"><%= t('dashboard.backToDashboard') %></a>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
